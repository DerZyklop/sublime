GITFOLDER=$PWD
echo $GITFOLDER
rm -r ~/Library/Application\ Support/Sublime\ Text\ 3/Cache
rm -r ~/Library/Application\ Support/Sublime\ Text\ 3/Index
rm -r ~/Library/Application\ Support/Sublime\ Text\ 3/Installed\ Packages
rm -r ~/Library/Application\ Support/Sublime\ Text\ 3/Packages

echo $GITFOLDER/Cache

ln -s $GITFOLDER/Cache ~/Library/Application\ Support/Sublime\ Text\ 3/
ln -s $GITFOLDER/Index ~/Library/Application\ Support/Sublime\ Text\ 3/
ln -s $GITFOLDER/Installed\ Packages ~/Library/Application\ Support/Sublime\ Text\ 3/
ln -s $GITFOLDER/Packages ~/Library/Application\ Support/Sublime\ Text\ 3/
